<div id="userleft">
<% @deck[0..(@deck.length/2)].each_with_index do |deck,i| %>
<%= i + 1%>:
<a href=<%= "/decks/#{ deck.id }/startround" %>><%= deck.subject %></a><br>
 <br><span class="deckcreated">Created by: <%= deck.creator.username %>
  <br> on <%= shorten_date(deck) %></span>
 <br><br>
  <% if current_user && current_user.id == deck.creator_id %>
  <a href="/decks/<%= deck.id %>/edit">Edit Deck</a>
    <form action="/decks/<%= deck.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="Delete <%= deck.subject %> Deck">
    </form>
  <% end %>
<% end %>
</div>

<div id="userright">
<% @deck[(@deck.length/2+1)..-1].each_with_index do |deck,i| %>
<%= i + @deck.length/2 + 2 %>:
<a href=<%= "/decks/#{ deck.id }/startround" %>><%= deck.subject %></a><br>
 <br><span class="deckcreated">Created by: <%= deck.creator.username %>
  <br> on <%= shorten_date(deck) %></span>
 <br><br>
  <% if current_user && current_user.id == deck.creator_id %>
  <a href="/decks/<%= deck.id %>/edit">Edit Deck</a>
    <form action="/decks/<%= deck.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="Delete <%= deck.subject %> Deck">
    </form>
  <% end %>
<% end %>
</div>

<% if current_user %>

<div id="deckindexbottom">
  <hr>
<a href="/decks/new">Create a new deck</a>
</div>
<% end %>
